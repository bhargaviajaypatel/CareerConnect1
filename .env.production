# Server Configuration
# Note: Vercel will assign its own port, so we don't need to specify PORT or SERVER_PORT
NODE_ENV=production

# MongoDB Atlas Configuration
# Uncomment and fill in your MongoDB Atlas connection string
# This should be set in the Vercel dashboard environment variables
# MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/CareerConnect?retryWrites=true&w=majority

# Vercel Configuration
FRONTEND_URL=https://career-connect.vercel.app

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100
LOGIN_RATE_LIMIT_WINDOW=15
LOGIN_RATE_LIMIT_MAX_ATTEMPTS=5
SIGNUP_RATE_LIMIT_WINDOW=60
SIGNUP_RATE_LIMIT_MAX_REQUESTS=3
RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_WINDOW_MS=300000
BURST_RATE_LIMIT_WINDOW_MS=60000

# CORS Configuration
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,PATCH

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=combined

# Document Security
DOCUMENT_DEFAULT_VISIBILITY=PRIVATE

# Data Masking Configuration
DATA_MASKING_ENABLED=true
PII_ENCRYPTION_ENABLED=true

# Session Configuration
SESSION_LIFETIME=86400000
ACCESS_TOKEN_EXPIRY=900000

# Proxy Settings
TRUST_PROXY=true

# Security Settings
MAX_FILE_SIZE=10485760

# Rate Limiting
RATE_LIMIT_MAX=100
LOGIN_RATE_LIMIT_MAX=5
AUTH_RATE_LIMIT_MAX_REQUESTS=5
BURST_RATE_LIMIT_MAX_REQUESTS=50

# Malware Scanning
MALWARE_SCAN_ENABLED=false

# Debug Setting
DEBUG=false

# Password Security
PASSWORD_MIN_LENGTH=12
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SYMBOLS=true
